@{
    ViewBag.Title = "title";
    Layout = "_LayoutGlobalProject";
    List<Projet> listeprojet = ViewData["projet"] as List<Projet>;
    
    var labels = listeprojet.Select(p => p.Sigle).ToArray();
    var data = listeprojet.Select(p => p.nbSite).ToArray();
}

<h2>Nombre site par projet</h2>

<div class="col-lg-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Nombre site</h5>

            <!-- Bar Chart -->
            <canvas id="barChart" style="max-height: 400px;"></canvas>
            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    var labels = @Html.Raw(Json.Serialize(labels));
                    var data = @Html.Raw(Json.Serialize(data));

                    new Chart(document.querySelector('#barChart'), {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'nombre',
                                data: data,
                                backgroundColor: [
                                    'rgba(255, 99, 132, 0.2)',
                                    'rgba(255, 159, 64, 0.2)',
                                    'rgba(255, 205, 86, 0.2)',
                                    'rgba(75, 192, 192, 0.2)',
                                    'rgba(54, 162, 235, 0.2)',
                                    'rgba(153, 102, 255, 0.2)',
                                    'rgba(201, 203, 207, 0.2)'
                                ],
                                borderColor: [
                                    'rgb(255, 99, 132)',
                                    'rgb(255, 159, 64)',
                                    'rgb(255, 205, 86)',
                                    'rgb(75, 192, 192)',
                                    'rgb(54, 162, 235)',
                                    'rgb(153, 102, 255)',
                                    'rgb(201, 203, 207)'
                                ],
                                borderWidth: 1
                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                });
            </script>
            <!-- End Bar CHart -->

        </div>
    </div>
</div>
